generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Translation {
    id        Int      @id @default(autoincrement())
    key       String   @unique // مفتاح النص (مثلاً: home_title)
    en        String // النص الإنجليزي
    ar        String // النص العربي
    createdAt DateTime @default(now())
}

model blogs {
  id      Int    @id @default(autoincrement())
  text_en String
  text_ar String
}
